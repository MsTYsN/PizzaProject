<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/photo"
        android:layout_alignTop="@+id/photo"
        android:layout_marginStart="100dp"
        android:text="TextView"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ingredientsPhoto"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/photo"
        android:layout_alignTop="@+id/nom"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nbIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ingredientsPhoto"
        android:layout_alignTop="@id/nom"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:text="3"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/dureePhoto"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@id/photo"
        android:layout_alignTop="@+id/ingredientsPhoto"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/dureeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/dureePhoto"
        android:layout_alignTop="@id/nbIngredients"
        android:layout_marginStart="25dp"
        android:layout_marginTop="29dp"
        android:text="45 min"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/parcourir"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/photo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/info"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/photo"
        android:layout_alignEnd="@+id/supprimer"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/supprimer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/photo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/idP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/parcourir"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>

</RelativeLayout>